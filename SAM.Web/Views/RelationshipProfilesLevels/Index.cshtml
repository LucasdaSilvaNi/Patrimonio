@model IEnumerable<SAM.Web.Models.RelPerfilNivel>

@{ViewBag.Title = "Relacionamento de Perfis por Nível Cadastrados";}

@Html.Partial("_GridNewButtons")

<table class="table" id="result-tables">
    <tr>
        <th>@Html.DisplayNameFor(model => model.IdNivel)</th>
        <th>@Html.DisplayNameFor(model => model.IdPerfil)</th>
        <th></th>
    </tr>

@foreach (var item in Model)
{
    <tr>
        <td>@Html.DisplayFor(modelItem => item.NivelRelacionado.Descricao)</td>
        <td>@Html.DisplayFor(modelItem => item.PerfilRelacionado.Descricao)</td>
        <td class="acoes">

            @Html.Partial("_Acoes", @item)

        </td>
    </tr>
}

</table>

@section Scripts {
    <script>
        sam.transaction.controleTransacaoIndexPadrao('@HttpContext.Current.User.Identity.Name', '@HttpContext.Current.Request.CurrentExecutionFilePath');
    </script>
}