@model SAM.Web.ViewModels.SectionsViewModel

@{ViewBag.Title = "Nova Divisão";}

@Styles.Render("~/Layout_5/css")

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm(null, null, FormMethod.Post, new { id = "formSection", @class = "formSubmit" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <br />
        <div class="form-group cor-azul">
            <div class="col-md-12">
                <div class="col-sm-1">
                    <h4><i class="glyphicon glyphicon-th-list"></i></h4>
                </div>
                <div class="col-md-11">
                    <h4>Dados da Divisão</h4>
                </div>
            </div>
        </div>

        <div class="form-group">

            @Html.LabelFor(model => model.InstitutionId, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-8">
                @Html.DropDownListFor(model => model.InstitutionId, (SelectList)ViewBag.Institutions, new { @class = "form-control comboinstitution" })
                @Html.ValidationMessageFor(model => model.InstitutionId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @*UO*@
            @Html.LabelFor(model => model.BudgetUnitId, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-3">
                @Html.DropDownListFor(model => model.BudgetUnitId, (SelectList)ViewBag.BudgetUnits, new { @class = "form-control comboBudgetUnit" })
                @Html.ValidationMessageFor(model => model.BudgetUnitId, "", new { @class = "text-danger" })
            </div>
            @*UGE*@
            @Html.LabelFor(model => model.ManagerUnitId, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-3">
                @Html.DropDownListFor(model => model.ManagerUnitId, (SelectList)ViewBag.ManagerUnits, new { @class = "form-control comboManagerUnit" })
                @Html.ValidationMessageFor(model => model.ManagerUnitId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @*UA*@
            @Html.LabelFor(model => model.AdministrativeUnitId, "Unidade Administrativa", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-3">
                @Html.DropDownListFor(model => model.AdministrativeUnitId, (SelectList)ViewBag.AdministrativeUnits, new { @class = "form-control selectpicker comboAdministrativeUnit" })
                @Html.ValidationMessageFor(model => model.AdministrativeUnitId, "", new { @class = "text-danger" })
            </div>
            @*Responsável*@
            @Html.LabelFor(model => model.ResponsibleId, "Responsável", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-3">
                @Html.DropDownListFor(model => model.ResponsibleId, (SelectList)ViewBag.User, "Selecione o Responsavel", new { @class = "form-control comboResponsible" })
                @Html.ValidationMessageFor(model => model.ResponsibleId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Description, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-6">
                @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "form-control", @maxlength = "120" } })
                @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Code, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-2">
                @Html.EditorFor(model => model.Code, new { htmlAttributes = new { @class = "form-control somenteNumerosMax", @min = "1", @max = "2147483647", @maxlength = "10" } })
                @Html.ValidationMessageFor(model => model.Code, "", new { @class = "text-danger" })
                @Html.ValidationMessage("CodigoJaExiste", new { @class = "text-danger" })
            </div>

            @Html.LabelFor(model => model.Telephone, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-2">
                @Html.EditorFor(model => model.Telephone, new { htmlAttributes = new { @class = "form-control mascara-telefone", @maxlength = "20" } })
                @Html.ValidationMessageFor(model => model.Telephone, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group cor-azul">
            <div class="col-md-12">
                <div class="col-sm-1">
                    <h4><i class="glyphicon glyphicon-th-list"></i></h4>
                </div>
                <div class="col-md-11">
                    <h4>Endereço</h4>
                </div>
            </div>
        </div>

        <div class="form-group">
            @*Postal Code*@
            @Html.LabelFor(model => model.RelatedAddress.PostalCode, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-2">
                @Html.EditorFor(model => model.RelatedAddress.PostalCode, new { htmlAttributes = new { @class = "form-control mascara-cep" } })
                @Html.ValidationMessageFor(model => model.RelatedAddress.PostalCode, "", new { @class = "text-danger" })
            </div>
            @*Street*@
            @Html.LabelFor(model => model.RelatedAddress.Street, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-4">
                @Html.EditorFor(model => model.RelatedAddress.Street, new { htmlAttributes = new { @class = "form-control", @maxlength = "200" } })
                @Html.ValidationMessageFor(model => model.RelatedAddress.Street, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @*Number*@
            @Html.LabelFor(model => model.RelatedAddress.Number, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-2">
                @Html.EditorFor(model => model.RelatedAddress.Number, new { htmlAttributes = new { @class = "form-control", @max = "2147483647", @maxlength = "10" } })
                @Html.ValidationMessageFor(model => model.RelatedAddress.Number, "", new { @class = "text-danger" })
            </div>
            @*Complement*@
            @Html.LabelFor(model => model.RelatedAddress.ComplementAddress, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-4">
                @Html.EditorFor(model => model.RelatedAddress.ComplementAddress, new { htmlAttributes = new { @class = "form-control", @maxlength = "30" } })
                @Html.ValidationMessageFor(model => model.RelatedAddress.ComplementAddress, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @*District*@
            @Html.LabelFor(model => model.RelatedAddress.District, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-2">
                @Html.EditorFor(model => model.RelatedAddress.District, new { htmlAttributes = new { @class = "form-control", @maxlength = "50" } })
                @Html.ValidationMessageFor(model => model.RelatedAddress.District, "", new { @class = "text-danger" })
            </div>
            @*City*@
            @Html.LabelFor(model => model.RelatedAddress.City, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-2">
                @Html.EditorFor(model => model.RelatedAddress.City, new { htmlAttributes = new { @class = "form-control", @maxlength = "50" } })
                @Html.ValidationMessageFor(model => model.RelatedAddress.City, "", new { @class = "text-danger" })
            </div>
            @*State*@
            @Html.LabelFor(model => model.RelatedAddress.State, htmlAttributes: new { @class = "control-label col-md-1" })
            <div class="col-md-1">
                @Html.EditorFor(model => model.RelatedAddress.State, new { htmlAttributes = new { @class = "form-control", @maxlength = "2" } })
                @Html.ValidationMessageFor(model => model.RelatedAddress.State, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.Partial("_SaveButtons")
        </div>
    </div>
}

@section Scripts {
    <script>
        sam.sections.Submit();
    </script>
}