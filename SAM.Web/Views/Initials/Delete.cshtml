@model SAM.Web.ViewModels.InitialViewModel

@{ViewBag.Title = "Exclusão da Sigla";
    string msg = ViewBag.NaoPodeExcluir;
    }

<h2>@ViewBag.Title</h2>

<h3>Você tem certeza que deseja excluí-lo?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>@Html.DisplayNameFor(model => model.InstitutionId)</dt>
        <dd>@Html.DisplayFor(model => model.InstitutionDescription)</dd>

        <dt>@Html.DisplayNameFor(model => model.BudgetUnitId)</dt>
        <dd>@Html.DisplayFor(model => model.BudgetUnitDescription)</dd>

        <dt>@Html.DisplayNameFor(model => model.ManagerUnitId)</dt>
        <dd>@Html.DisplayFor(model => model.ManagerUnitDescription)</dd>

        <dt>@Html.DisplayNameFor(model => model.Name)</dt>
        <dd>@Html.DisplayFor(model => model.Name)</dd>

        <dt>@Html.DisplayNameFor(model => model.Description)</dt>
        <dd>@Html.DisplayFor(model => model.Description)</dd>

        <dt></dt>
        <dd>
            @if (string.IsNullOrEmpty(msg))
            {
                @Html.Partial("_DeleteButtons")
            }
            else
            {
                <br />
                @Html.Label(msg, new { @class = "text-danger" })
                <br />
                <a class="btnvoltar btn btn-default" href="javascript:history.back()">
                    <i class="glyphicon glyphicon-share-alt"></i> Voltar
                </a>
            }
        </dd>
    </dl>
</div>
