@model SAM.Web.ViewModels.DadosSIAFEMValidacaoMovimentacoes
<div class="modal fade" id="modalRetornoSIAFEM" tabindex="-1" role="dialog" aria-labelledby="botões">
    <div class="modal-dialog" role="document" style="width: 30%; max-height: 60%;">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title tituloModalSiafem">Dados do SIAFEM</h4>
            </div>
            <div class="modal-body">
                <div class="bodyModalDadosSiafem">
                    @Model.mensagem
                </div>
                <div class="form-group text-center botoes">
                    @if (Model.mensagemDeSuccesso)
                    {
                        <button type="button" class="btn btn-primary" id="ok" data-dismiss="modal">OK</button>
                    }
                    else
                    {
                        if (Model.primeiraNLGeraPendecia)
                        {
                            <button type="button" class="btn btn-danger" id="abortarApos" data-dismiss="modal">Abortar processo</button>
                        }
                        else
                        {
                            <button type="button" class="btn btn-primary" id="gerar_pendencias" data-dismiss="modal">Gerar Pendências</button>
                        }
                    }
                </div>
            </div>
            <div class="modal-footer">
            </div>
        </div>
    </div>
</div>
