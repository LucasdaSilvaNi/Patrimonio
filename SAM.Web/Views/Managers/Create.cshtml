                @Html.ValidationMessageFor(model => model.RelatedAddress.ComplementAddress, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @*District*@
            @Html.LabelFor(model => model.RelatedAddress.District, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-3">
                @Html.EditorFor(model => model.RelatedAddress.District, new { htmlAttributes = new { @class = "form-control", @maxlength = "50" } })
                @Html.ValidationMessageFor(model => model.RelatedAddress.District, "", new { @class = "text-danger" })
            </div>
            @*City*@
            @Html.LabelFor(model => model.RelatedAddress.City, htmlAttributes: new { @class = "control-label col-md-1" })
            <div class="col-md-2">
                @Html.EditorFor(model => model.RelatedAddress.City, new { htmlAttributes = new { @class = "form-control", @maxlength = "50" } })
