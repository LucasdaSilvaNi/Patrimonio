@model IEnumerable<SAM.Web.Models.Material>

@{ViewBag.Title = "Materiais Cadastrados";}

@Html.Partial("_GridNewButtons")
<table class="table" id="result-tables">
    <tr>
        <th>@Html.DisplayNameFor(model => model.Code)</th>
        <th>@Html.DisplayNameFor(model => model.Description)</th>
        <th>@Html.DisplayNameFor(model => model.MaterialClassId)</th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@Html.DisplayFor(modelItem => item.Code)</td>
            <td>@Html.DisplayFor(modelItem => item.Description)</td>
            <td>@Html.DisplayFor(modelItem => item.RelatedMaterialClass.Description)</td>
            <td class="acoes">

                @Html.Partial("_Acoes", @item)

            </td>
        </tr>
    }
</table>

@section Scripts {
    <script>
        sam.transaction.controleTransacaoIndexPadrao('@HttpContext.Current.User.Identity.Name', '@HttpContext.Current.Request.CurrentExecutionFilePath');
    </script>
}