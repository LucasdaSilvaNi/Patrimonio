@model SAM.Web.Models.Configuration

@{ViewBag.Title = "Editar Configuração";}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)
       
        <div class="form-group">
            @Html.LabelFor(model => model.InitialYearMonthAsset, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-3">
                @Html.EditorFor(model => model.InitialYearMonthAsset, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.InitialYearMonthAsset, "", new { @class = "text-danger" })
            </div>
            @Html.LabelFor(model => model.ReferenceYearMonthAsset, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-3">
                @Html.EditorFor(model => model.ReferenceYearMonthAsset, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.ReferenceYearMonthAsset, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.Partial("_SaveButtons")
        </div>
    </div>
}