@model SAM.Web.ViewModels.DepreciationAccountViewModel

<h2>Nova Conta de Depreciação</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        <div class="form-group">
            @Html.LabelFor(model => model.Codigo, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-6">
                @Html.EditorFor(model => model.Codigo, new { htmlAttributes = new { @class = "form-control somenteNumerosMax", @min = "1", @max = "2147483647", @maxlength = "10" } })
                @Html.ValidationMessageFor(model => model.Codigo, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Descricao, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-6">
                @Html.EditorFor(model => model.Descricao, new { htmlAttributes = new { @class = "form-control", @maxlength = "255" } })
                @Html.ValidationMessageFor(model => model.Descricao, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Status, "Conta ativa?", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-3">
                <div class="icheckbox_square-blue">
                    @Html.EditorFor(model => model.Status)
                </div>
            </div>
        </div>

        <div class="form-group cor-azul">
            <div class="col-md-12">
                <div class="col-sm-1">
                    <h4><i class="glyphicon glyphicon-th-list"></i></h4>
                </div>
                <div class="col-md-11">
                    <h4>Dados para Contabiliza-SP</h4>
                </div>
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.DescricaoProContabilizaSP, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-6">
                @Html.EditorFor(model => model.DescricaoProContabilizaSP, new { htmlAttributes = new { @class = "form-control", @maxlength = "60" } })
                @Html.ValidationMessageFor(model => model.DescricaoProContabilizaSP, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.Partial("_SaveButtons")
        </div>
    </div>
}
