@model SAM.Web.ViewModels.NotificationViewModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@Styles.Render("~/Scripts/summernote-develop/dist/summernote.css") @*Não foi possível a utilização do bundle nesse css*@

@Styles.Render("~/Notification/Create_1/css")
@Scripts.Render("~/Notification/Create_2/js")


<h3 style="margin-top:40px;margin-bottom: 20px;" class="cor-azul">Cadastro de Notificação</h3>
<hr />

@using (Html.BeginForm(null, null, FormMethod.Post, new { id = "formNotificacao" }))
{
    <div class="form-horizontal">

        <div class="form-group">
            <div class="col-md-2"> </div>
            @Html.LabelFor(model => model.Titulo, "Titulo:", htmlAttributes: new { @class = "control-label col-md-1" })
            <div class="col-md-6">
                @Html.EditorFor(model => model.Titulo, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Titulo, "", new { @class = "text-danger" })
            </div>

            @Html.LabelFor(model => model.Status, "Mostrar:", htmlAttributes: new { @class = "control-label col-md-1" })
            <div class="col-md-2" style="margin-top: 5px">
                @Html.EditorFor(model => model.Status, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Status, "", new { @class = "text-danger" })
            </div>
        </div>

        <br>

        <div class="col-sm-12">
            @Html.TextAreaFor(model => model.CorpoMensagem, new { @class = "form-control summernote" })
        </div>
    </div>

    <div class="form-group" style="margin-bottom: 50px;">
        @Html.Partial("_SaveButtons")
    </div>
}

<script>
    $(document).ready(function () {
        notification.Load();
    });
</script>
