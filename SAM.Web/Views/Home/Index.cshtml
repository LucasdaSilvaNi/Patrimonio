@{ViewBag.Title = "Bem Vindo";}

@Styles.Render("~/Home/css")
<div class="owl-carousel">
    <div class="carrosel-01">
        <h2>Sistema Controle Estoque</h2>
        <ul>
            <li>Controle Físico e Financeiro do Estoque</li>
            <li>Codificação de Materiais utilizado pelo SIAFÍSICO</li>
            <li>Integrado ao sistema SIAFEM</li>
        </ul>
        <img src="~/Content/images/estoque.png" />
    </div>
    <div class="carrosel-02">
        <h2>Sistema Controle Patrimônio</h2>
        <ul>
            <li>Controle Físico e Financeiro dos Bens Patrimoniais</li>
            <li>Codificação de Materiais utilizado pelo SIAFÍSICO</li>
            <li>Bolsa de Materiais</li>
        </ul>
        <img src="~/Content/images/patrimonio.png" />
    </div>
</div>

@Scripts.Render("~/Home/js")
<script type="text/javascript">
    $(document).ready(function () {
        $(".owl-carousel").owlCarousel({
            autoPlay: 3000, //Set AutoPlay to 3 seconds

            items: 1,
            itemsDesktop: [768, 3], //abaixo de 768 de largura
            itemsDesktopSmall: [640, 3] //abaixo de 640 de largura
        });
    });
</script>