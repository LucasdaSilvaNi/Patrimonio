@model SAM.Web.ViewModels.PlateBarCodeViewModel

<style>
    .panel-heading {
        padding: 5px 15px;
    }
</style>

<h2>@ViewBag.Title</h2>
<button id="btnFiltrar" class="btn btn-warning pull-right"> <span class="glyphicon glyphicon-filter" aria-hidden="true"></span> </button>

    <hr />

<div class="form-horizontal panel-filter" style="margin-bottom: 20px;">

    <div class="form-group">
        @Html.LabelFor(model => model.InstitutionId, "Orgão", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-8">
            @Html.DropDownListFor(model => model.InstitutionId, (SelectList)ViewBag.Institutions, new { @id = "InstitutionId", @name = "InstitutionId", @class = "form-control comboinstitution" })
            <span id="spanInstitution" class="text-danger field-validation-error"></span>
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.BudgetUnitId, "UO", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-8">
            @Html.DropDownListFor(model => model.BudgetUnitId, (SelectList)ViewBag.BudgetUnits, new { @id = "BudgetUnitId", @name = "BudgetUnitId", @class = "form-control comboBudgetUnit" })
            <span id="spanBudgetUnits" class="text-danger field-validation-error"></span>
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.ManagerUnitId, "UGE", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-8">
            @Html.DropDownListFor(model => model.ManagerUnitId, (SelectList)ViewBag.ManagerUnits, new { @id = "ManagerUnitId", @name = "ManagerUnitId", @class = "form-control comboManagerUnit" })
            <span id="spanManagerUnits" class="text-danger field-validation-error"></span>
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Contenha, "Contenha:", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-8">
            @Html.EditorFor(model => model.Contenha, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Contenha, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group" style="margin-top: 25px;">

        <div class="col-md-2"></div>

        <div class="panel panel-default col-md-4" style="padding: 0 0 0 0;display:table-row;margin-left: 15px;">

            <div class="col-md-2"></div>

            <div class="panel-heading">Chapas</div>
            <div class="panel-body">
                <div class="form-group" style="display:table-row;">
                    @Html.LabelFor(model => model.numChapaInicioRef, "De:", htmlAttributes: new { @class = "control-label", @style = "float: left" })
                    <div class="col-md-5">
                        @Html.EditorFor(model => model.numChapaInicioRef, new { htmlAttributes = new { @class = "form-control", @type = "number" } })
                        @Html.ValidationMessageFor(model => model.numChapaInicioRef, "", new { @class = "text-danger" })
                    </div>

                    @Html.LabelFor(model => model.numChapaFimRef, "Até:", htmlAttributes: new { @class = "control-label", @style = "float: left" })
                    <div class="col-md-5">
                        @Html.EditorFor(model => model.numChapaFimRef, new { htmlAttributes = new { @class = "form-control", @type = "number" } })
                        @Html.ValidationMessageFor(model => model.numChapaFimRef, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
        </div>

        <button id="btnFiltrar" data-toggle="tooltip" data-placement="top" data-original-title="Click para Procurar" class="btn btn-warning" style="margin-left: 30%;margin-top: 60px;" onclick="reportPlateBarCode.CarregaDadosGrid();">
            <span class="glyphicon glyphicon-search" aria-hidden="true"></span>
        </button>

    </div>
    <div class="clearfix"></div>
    <hr />
</div>


<div id="partialDataReportPlateBarCode"></div>