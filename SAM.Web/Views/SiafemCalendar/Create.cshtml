                <div class="col-md-2">
                    @Html.EditorFor(model => model.DateClosing, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.DateClosing, "", new { @class = "text-danger" })
                </div>
            </div>*@


        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <span class="text-danger">@ViewBag.siafemCalendarExiste</span>
            </div>
        </div>
        <div class="form-group">
            @Html.Partial("_SaveButtons")
        </div>
    </div>
}


