@model SAM.Web.ViewModels.SiafemCalendarViewModel

@{ViewBag.Title = "Editar Calendário SIAFEM";}

<h2>@ViewBag.Title</h2>
@*- @Model.FiscalYear*@

@using (Html.BeginForm(null, null, FormMethod.Post, new { id = "formSiafemCalendar", @class = "formSubmit" }))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.InstitutionId)
    @Html.HiddenFor(model => model.Id)
    @Html.HiddenFor(model => model.ReferenceMonth)
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
     

        <div class="form-group">
            @Html.LabelFor(model => model.FiscalYear, "Ano-Exercício", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-2">
                @Html.EditorFor(model => model.FiscalYear, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                @Html.ValidationMessageFor(model => model.FiscalYear, "", new { @class = "text-danger" })
            </div>
        </div>
        
        <div class="form-group">
            @Html.LabelFor(model => model.ReferenceMonth, "Mês-Referência", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-2">
                @Html.EditorFor(model => model.ReferenceMonth, new { htmlAttributes = new { @class = "form-control dateload", @readonly = "readonly" } })
                @Html.ValidationMessageFor(model => model.ReferenceMonth, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.DateClosing, "Data de Fechamento", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-2">
                @Html.EditorFor(model => model.DateClosing, new { htmlAttributes = new { @class = "form-control dateload1", @onkeydown = "return false", @autocomplete = "off" } })
                @Html.ValidationMessageFor(model => model.DateClosing, "", new { id = "spanDate", @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.DataParaOperadores, "Data de Fechamento para os Operadores", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-2">
                @Html.EditorFor(model => model.DataParaOperadores, new { htmlAttributes = new { @class = "form-control dateload2", @onkeydown = "return false", @autocomplete = "off" } })
                @Html.ValidationMessageFor(model => model.DataParaOperadores, "", new { id = "spanDate", @class = "text-danger" })
            </div>
        </div>

      

        @*<div class="form-group">
            @Html.LabelFor(model => model.DateClosing, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-6">
                @Html.EditorFor(model => model.DateClosing, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.DateClosing, "", new { @class = "text-danger" })
            </div>
        </div>*@

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <span class="text-danger">@ViewBag.siafemCalendarExiste</span>
            </div>
        </div>
        <div class="form-group">
            @Html.Partial("_SaveButtons")
        </div>
    </div>
}

<script src="~/Scripts/sam-siafemCalendars.js"></script>
<script>
    $(document).ready(function () {
        //AlteraDatePicker();
        let mes = $('#ReferenceMonth').val().split('/')[0];
        let ano = $('#ReferenceMonth').val().split('/')[1];

        let dataInicio = new Date(ano, mes, 1);
        //alert(dataInicio)
        setDataInicio(dataInicio);
        //$('#ReferenceMonth').val('2019-03-20');
    });
</script>

