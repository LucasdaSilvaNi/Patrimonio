            @Html.LabelFor(model => model.SupplyUnitId, "Selecione a Unidade Fornecimento", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(m => m.SupplyUnitId, (SelectList)ViewBag.UnidadesFornecimento, "-- Selecione --", new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.SupplyUnitId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.Partial("_SaveButtons")
        </div>
    </div>
}